{
    "compilerOptions": {
        "target": "es2021",
        "module": "esnext",
        "lib": ["es2021", "dom", "dom.iterable"],
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "checkJs": false,
        "noImplicitAny": false,
        "outDir": "./dist",
        "sourceMap": true,
        "strictPropertyInitialization": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "test"]
}
